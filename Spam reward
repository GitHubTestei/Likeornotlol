local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

local Remote = ReplicatedStorage:WaitForChild("RemoteEvents"):WaitForChild("ClaimPlaytimeEvent")
local PlayTimeReword = LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("MainGui"):WaitForChild("PlayTimeReword")

-- Toggle state
_G.LoopEnabled = true

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PlaytimeControlGui"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

-- Container in top right
local Container = Instance.new("Frame")
Container.Size = UDim2.new(0, 150, 0, 50)
Container.Position = UDim2.new(1, -160, 0, 10)
Container.BackgroundTransparency = 0.3
Container.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Container.BorderSizePixel = 0
Container.Parent = ScreenGui

-- Stop Button
local StopBtn = Instance.new("TextButton")
StopBtn.Size = UDim2.new(0.5, -5, 1, 0)
StopBtn.Position = UDim2.new(0, 0, 0, 0)
StopBtn.Text = "Stop"
StopBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
StopBtn.TextColor3 = Color3.new(1, 1, 1)
StopBtn.Parent = Container

-- Continue Button
local ContBtn = Instance.new("TextButton")
ContBtn.Size = UDim2.new(0.5, -5, 1, 0)
ContBtn.Position = UDim2.new(0.5, 5, 0, 0)
ContBtn.Text = "Continue"
ContBtn.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
ContBtn.TextColor3 = Color3.new(1, 1, 1)
ContBtn.Parent = Container

-- Button Functions
StopBtn.MouseButton1Click:Connect(function()
    _G.LoopEnabled = false
end)

ContBtn.MouseButton1Click:Connect(function()
    _G.LoopEnabled = true
end)

-- Loop
task.spawn(function()
    while true do
        if _G.LoopEnabled then
            for i = 1, 10 do -- claim 10x per cycle
                Remote:FireServer(PlayTimeReword.Day3)
                Remote:FireServer(PlayTimeReword.Day6)
                Remote:FireServer(PlayTimeReword.Day5)
            end
        end
        task.wait(0.1) -- tiny pause between bursts
    end
end)
